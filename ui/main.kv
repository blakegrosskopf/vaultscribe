        MDCard:
            size_hint: 0.92, None
            pos_hint: {"center_x": 0.5, "center_y": 0.44}
            height: self.minimum_height
            padding: "16dp"
            radius: [18]
            md_bg_color: 0, 0, 0, 0.28
            BoxLayout:
                orientation: "vertical"
                spacing: "12dp"
